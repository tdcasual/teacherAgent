# -----------------------------
# Backup defaults
# -----------------------------
BACKUP_NAMESPACE=prod
BACKUP_TARGET_DEFAULT=s3
BACKUP_HOT_DAYS=30
BACKUP_COLD_DAYS=180

# 5 minutes incremental
BACKUP_INCREMENTAL_INTERVAL_SEC=300
# 24 hours full backup
BACKUP_DAILY_FULL_INTERVAL_SEC=86400
# 7 days restore verification
BACKUP_VERIFY_INTERVAL_SEC=604800

# -----------------------------
# S3 provider
# -----------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=

# -----------------------------
# OSS provider
# -----------------------------
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=
OSS_BUCKET=

