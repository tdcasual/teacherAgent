# ==================================================
# Production Minimal Env (no plaintext secrets)
# ==================================================

# Core LLM / MCP
OPENAI_API_KEY=
MCP_API_KEY=

# Runtime queues
JOB_QUEUE_BACKEND=rq
REDIS_URL=redis://redis:6379/0
RQ_QUEUE_NAME=default
RQ_SCAN_PENDING_ON_START=1

# API runtime knobs
API_WORKERS=2
DEFAULT_TEACHER_ID=teacher
PROFILE_UPDATE_ASYNC=1
PROFILE_CACHE_TTL_SEC=10
ASSIGNMENT_DETAIL_CACHE_TTL_SEC=10
LLM_MAX_CONCURRENCY_STUDENT=12
LLM_MAX_CONCURRENCY_TEACHER=2
CHAT_STUDENT_INFLIGHT_LIMIT=1
CHAT_MAX_MESSAGES_STUDENT=40

# Local stores
MEM0_DIR=.mem0
QDRANT_PATH=.qdrant
MEM0_TELEMETRY=False

# Optional timeouts (0 means default/no extra timeout cap)
LLM_TIMEOUT_SEC=0
OCR_TIMEOUT_SEC=0

# ==================================================
# Backup (A-tier)
# Single-target write: choose target per task (s3|oss)
# ==================================================
BACKUP_NAMESPACE=prod
BACKUP_TARGET_DEFAULT=s3
BACKUP_HOT_DAYS=30
BACKUP_COLD_DAYS=180
BACKUP_INCREMENTAL_INTERVAL_SEC=300
BACKUP_DAILY_FULL_INTERVAL_SEC=86400
BACKUP_VERIFY_INTERVAL_SEC=604800

# S3 provider
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=

# OSS provider
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=
OSS_BUCKET=

